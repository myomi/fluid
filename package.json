{
  "name": "fluid",
  "version": "0.1.0",
  "description": "Tiny Sales management application",
  "main": "./main/main.js",
  "scripts": {
    "build": "yarn run clean && webpack && yarn run copy",
    "build:renderer": "webpack",
    "copy": "cpx package.json dist",
    "clean": "rimraf dist && rimraf release",
    "elm:make": "elm-make --output dist/renderer/Main.js src/renderer/Main.elm",
    "elm:install": "elm-package install",
    "start": "yarn run build && electron dist",
    "watch": "yarn run clean && tsc --watch",
    "electron": "electron .",
    "package": "yarn run build && electron-packager dist flluid --platform darwin  --out release"
  },
  "keywords": [
    "electron",
    "typescript",
    "elm"
  ],
  "author": "myomi",
  "license": "MIT",
  "devDependencies": {
    "awesome-typescript-loader": "^3.2.1",
    "cpx": "^1.5.0",
    "css-loader": "^0.28.4",
    "electron": "^1.6.11",
    "electron-packager": "^8.7.2",
    "elm": "^0.18.0",
    "elm-webpack-loader": "^4.3.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-include-assets-plugin": "^0.0.6",
    "html-webpack-plugin": "^2.29.0",
    "node-sass": "^4.5.3",
    "rimraf": "^2.6.1",
    "sass-loader": "^6.0.6",
    "typescript": "^2.4.1",
    "webpack": "^3.3.0"
  },
  "dependencies": {
    "chime.scss": "^0.1.0"
  }
}
