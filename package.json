{
  "name": "fluid",
  "version": "0.1.0",
  "description": "Tiny Sales management application",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "yarn run clean && yarn run elm:make && tsc",
    "clean": "rimraf dist",
    "elm:make": "elm-make --output dist/renderer/Main.js src/renderer/Main.elm",
    "elm:install": "elm-package install",
    "start": "yarn run build && electron .",
    "watch": "yarn run clean && tsc --watch"
  },
  "keywords": [
    "electron",
    "typescript",
    "elm"
  ],
  "author": "myomi",
  "license": "MIT",
  "devDependencies": {
    "electron": "^1.6.11",
    "rimraf": "^2.6.1",
    "typescript": "^2.4.1"
  },
  "dependencies": {
    "chime.scss": "^0.1.0",
    "elm": "^0.18.0"
  }
}
